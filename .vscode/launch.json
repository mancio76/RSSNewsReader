{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Py Server",
            "type": "debugpy",
            "request": "launch",
            "program": "run_noreload_server.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/.venv/bin/python3"
            }
        },
        {
            "name": "Py Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Py Reload",
            "type": "debugpy",
            "request": "launch",
            "program": "run_noreload_server.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/.venv/bin/python3"
            }
        },
        {
            "name": "Firefox",
            "type": "firefox",
            "request": "launch",
            "url": "http://127.0.0.1:8000/web"
        }
    ]
}