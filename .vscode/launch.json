{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Debug No Reload",
            "type": "debugpy",
            "request": "launch",
            "program": "run_noreload_server.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/.venv/bin/python3"
            }
        },
        {
            "type": "chrome",
            "name": "http://127.0.0.1:8000/web",
            "request": "launch",
            "url": "http://127.0.0.1:8000/web"
        }
    ]
}